<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">State #<%= @state.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>State</dt>
              <dd><%= @state.state %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/states" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/states/<%= @state.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<div class="row isotope-container col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
<table class="table table-striped table-hover">
  <thead>
    <tr>

    <th>
    Insurer
    </th>
    <th>Plan Name</th>
    <th>County</th>
    <th>Ind 40 Prem</th>
    <th></th>
    </tr>
  </thead>

  <tbody>

    <% @state.plans.each do |plan| %>
      <tr>
            <td><%= plan.insurer_id %></td>
            <td><%= plan.plan_name %></td>
            <td><%= plan.county_id %></td>
            <td>$ <%= plan.ind_40_prem %></td>

            <td>
              <a href="../plans/<%= plan.id %>" class="btn btn_primary">
                <i class="fa fa-search-plus"></i>
              </a>
            </td>
          </li>
        <% end %>
        </ul>
    </tr>
  </tbody>
</table>
</div>


<!-- End responsive panel example -->
