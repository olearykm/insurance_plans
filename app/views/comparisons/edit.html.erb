            <label for="plan_id" class="col-sm-2 control-label">
              Plan
            </label>
            <div class="col-sm-10">
              <input type="text" id="plan_id" name="plan_id" placeholder="Plan" class="form-control" value="<%= @comparison.plan_id %>">
