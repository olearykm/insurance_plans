<!-- Validation failure messages -->

<% if @plan_number.errors.any? %>
  <% @plan_number.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Plan Number #<%= @plan_number.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_plan_number/<%= @plan_number.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for plan_number -->
          <div class="form-group">
            <label for="plan_number" class="col-sm-2 control-label">
              Plan number
            </label>
            <div class="col-sm-10">
              <input type="text" id="plan_number" name="plan_number" placeholder="Plan number" class="form-control" value="<%= @plan_number.plan_number %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Plan Number
              </button>
              or
              <a href="/plan_numbers/<%= @plan_number.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
