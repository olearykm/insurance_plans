<!-- Validation failure messages -->

<% if @insurer.errors.any? %>
  <% @insurer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Insurer #<%= @insurer.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_insurer/<%= @insurer.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for insurer -->
          <div class="form-group">
            <label for="insurer" class="col-sm-2 control-label">
              Insurer
            </label>
            <div class="col-sm-10">
              <input type="text" id="insurer" name="insurer" placeholder="Insurer" class="form-control" value="<%= @insurer.insurer %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Insurer
              </button>
              or
              <a href="/insurers/<%= @insurer.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
